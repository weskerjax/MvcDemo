@model UserLoginViewModel
@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    ViewBag.Title = "登入";

}



@section Styles {
    <style type="text/css">
        #EmptyLayout {
            background: #fff;
        }

        #BodyBg {
            min-height: 100%;
            min-width: 100%;
            position: fixed;
            top: 0;
            left: 0;
        }

        #SubmitForm {
            margin: -170px auto 0 auto;
            padding: 5px 0;
            max-width: 340px;
            position: absolute;
            top:44%;
            right: 10%;
            z-index: 999;
        }

        #SubmitForm .panel {
            border: none;
            border-radius: 10px;
            box-shadow: 0 1px 4px 1px rgba(0, 0, 0, 0.3);
        }

        #SubmitForm .panel-heading {
            border-radius: 10px 10px 0 0;
            font-size: 24px;
            font-weight: bold;
        }
        #SubmitForm .panel-body {
            padding: 35px 20px 30px;
            position: relative;
        }
        #SubmitForm .form-group {
            margin-bottom: 30px;
        }

        #StatusMsg {
            position: absolute;
        }

        #CopyRight {
            padding-top:10px;
            text-align: right;
        }

        @@media (max-width: 500px) {
            #SubmitForm {
                margin: 0 auto;
                position: relative;
                top: 0;
                left: 0;
            }
        }
    </style>

}




<img id="BodyBg" src="~/Content/Styles/Images/login_bg.jpg" />


<div id="SubmitForm">
    <div class="panel panel-primary">
        <div class="panel-heading">MVC Demo</div>


        <form class="panel-body" method="post" action="" autocomplete="off" gfc-one-submit="">
            @Html.Partial("_StatusMsg")

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                    @Html.BsTextBoxFor(m => m.Account, new { placeholder = "帳號" })
                </div>
                <span class="form-tip">@Html.ValidationMessageFor(m => m.Account)</span>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密碼" })
                </div>
                <span class="form-tip">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
			

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-block">登入 <i class="fa fa-sign-in fa-lg"></i></button>
            </div>

            <!-- CSRF -->
            @Html.AntiForgeryToken()
        </form>
    </div>

    <div id="CopyRight">
        <span class="btn btn-default btn-sm">Version</span>
    </div>

</div>

